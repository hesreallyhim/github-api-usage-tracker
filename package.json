{
  "name": "github-api-usage-tracker",
  "private": false,
  "author": "Really Him",
  "license": "MIT",
  "repository": "https://github.com/hesreallyhim/github-api-usage-tracker",
  "type": "commonjs",
  "scripts": {
    "bundle": "rimraf dist && ncc build src/pre.js -o dist/pre && ncc build src/post.js -o dist/post && ncc build src/noop.js -o dist/noop",
    "lint": "eslint .",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "dependencies": {
    "@actions/core": "2.0.1"
  },
  "devDependencies": {
    "@vercel/ncc": "0.38.4",
    "@eslint/js": "^9.19.0",
    "eslint": "^9.19.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "vitest": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20"
  }
}
